<h1>Recipes</h1>

<h2>Sort By</h2>

<%= form_tag recipes_path, method: "GET" do %>
    <%= radio_button_tag 'sort_by', 'ingredients' %>
    <%= label_tag "Count of Ingredients" %>
    <%= radio_button_tag 'sort_by', 'all' %>
    <%= label_tag "All Recipes" %>
    <%= submit_tag "Filter" %>
<% end %>

<h2>List</h2>

<ul>
    <% @recipes.each do |r| %>
        <li><%= r.name %></li>
        <li>User: <%= r.user.name %></li>
        <li>Ingredients <%= r.ingredients.count %></li><br>
    <% end %>
</ul>